body
  font-family 'Gilroy', sans-serif
  font-weight 500
  font-size 14px
  padding 0
  margin 0

h1, h2, h3, h4, h5, h6
  padding 0
  margin 0
  font-weight 600

h1
  font-size 31px

h2
  font-size 24px

h3
  font-size 20px

h4
  font-size 15px

h5
  font-size 13px

h6
  font-size 11px

p
  margin 0
  padding 0
  font-weight 500
  line-height 15px

span
  margin 0
  padding 0
  display block
  font-size 11px
  font-weight 500
  line-height 15px

*
  box-sizing border-box
  text-decoration none
  font-family 'Gilroy', sans-serif

div, p, input, form
  box-sizing border-box

input
  border-style none
  outline none

button
  &:focus
    outline none
    font-family 'Gilroy', sans-serif

ul, li
  display block
  padding 0
  margin 0
